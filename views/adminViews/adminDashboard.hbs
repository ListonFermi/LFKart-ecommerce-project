        {{!-- display image --}}
        <script>
            function displayImage() {
                const reader = new FileReader()
                reader.onload = () => {
                    previewBannerImg.src = reader.result
                }
                const file = document.querySelector("#bannerImage").files[0];
                if (file) {
                    previewBannerImg.style.display = 'block'
                    reader.readAsDataURL(file)
                }
            }
        </script>
