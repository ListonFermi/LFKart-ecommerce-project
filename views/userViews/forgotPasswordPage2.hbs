{{> userHeader}}

  <div class="container main-container headerOffset">

    <div class="row">
      <div class="breadcrumbDiv col-lg-12">
        <ul class="breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li class="active"> Authentication</li>
        </ul>
      </div>
    </div>

    <div class="row">

      <div class="col-lg-9 col-md-9 col-sm-7">
        <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Authentication</span></h1>

        <div class="row userInfo">

          <div class="col-xs-12 col-sm-6">
            <h2 class="block-title-2"> Confirm Your OTP </h2>

            <form action="/forgotPasswordPage3" method="POST" role="form" class="regForm">
              <div class="form-group">
                <input id="OTP" type="hidden" class="form-control" value="{{currentOTP}}">
              </div>
              <div class="form-group">
                <label>OTP</label>
                <input title="Invalid OTP" type="tel" class="form-control" placeholder="Enter OTP" required
                  data-rule-equalTo="#OTP" >
              </div>
              <div class="form-group">
                <label>Time Left: </label>
                <span>
                  <h4 id="timer"></h4>Seconds left
                </span>
              </div>
              <button type="submit" id="verifyOTP" class="btn btn-primary"><i class="fa fa-user"></i>Confirm OTP</button>
            </form>
            <form  action="/resendOTP" method="POST">
              <button id="ResendOTP" type="submit" class="btn btn-danger" style="display: none;"> Resend OTP</button>
            </form>
          </div>
        </div>
        <script>
          let a = 60
          h = document.getElementById('timer')
          let otpTimer = setInterval(() => {
            h.innerText = a--
            if (a === -1) {
              clearInterval(otpTimer);
              verifyOTP.style.display = 'none'
              ResendOTP.style.display = 'block'
            }
          }, 1000)
        </script>
        <!--/row end-->

      </div>

    </div>
    <!--/row-->

    <div style="clear:both"></div>
  </div>
  <!-- /wrapper -->

  <div class="gap"></div>


