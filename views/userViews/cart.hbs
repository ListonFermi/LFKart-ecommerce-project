{{> userHeader}}

<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/shop">Category</a></li>
        <li class="active">Cart</li>
      </ul>
    </div>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7 col-xs-6 col-xxs-12 text-center-xs">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Shopping cart </span>
      </h1>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs">
      <h4 class="caps"><a href="/shop"><i class="fa fa-chevron-left"></i> Back to shopping </a></h4>
    </div>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <div class="row userInfo">
        <div class="col-xs-12 col-sm-12">
          <div class="cartContent w100">
            <table class="cartTable table-responsive" style="width:100%">
              <tbody>
                <tr class="CartProduct cartTableHeader">
                  <td style="width:15%"> Product</td>
                  <td style="width:40%">Details</td>
                  <td style="width:10%" class="delete">&nbsp;</td>
                  <td style="width:10%">QTY</td>
                  <td style="width:15%">Total</td>
                </tr>
                {{#each cartData}}
                <tr class="CartProduct" id="cartProduct{{@index}}">
                  <td class="CartProductThumb">
                    <div><a href=""><img src="images/productImages/{{this.productId.productImage1}}" alt="img"></a>
                    </div>
                  </td>
                  <td>
                    <div class="CartDescription">
                      <h4><a href="/productDetails/{{this.productId._id}}">{{this.productId.productName}}</a></h4>
                      <div id="productPrice{{@index}}" class="price"><span>₹{{this.productId.productPrice}}</span>
                      </div>
                    </div>
                  </td>
                  <div id="stockLimit{{@index}}" style="display: none;">{{this.productId.productStock}}</div>
                  <td class="delete"><a title="Delete" onclick="deleteCart('{{this._id}}','{{@index}}')"> <i
                        class="glyphicon glyphicon-trash fa-2x"></i></a></td>
                  <td>
                    <button type="button" class="btn btn-danger btn-sm"
                      onclick="cartDec('{{this._id}}','{{@index}}')">-</button>
                    <span id="productQuantity{{@index}}"> &nbsp; &nbsp;{{this.productQuantity}} &nbsp; &nbsp; </span>
                    <button type="button" class="btn btn-primary btn-sm"
                      onclick="cartInc('{{this._id}}','{{@index}}')">+</button>
                  </td>
                  <td id="totalCostPerProduct{{@index}}" class="price">₹{{this.totalCostPerProduct}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <!--cartContent-->

          <div class="cartFooter w100">
            <div class="box-footer">
              <div class="pull-left"><a href="/" class="btn btn-default"> <i class="fa fa-arrow-left"></i>
                  &nbsp; Continue shopping </a></div>
              <div class="pull-right">
                <a href="/cart">
                  <button class="btn btn-default"><i class="fa fa-undo"></i> &nbsp; Update cart </button>
                </a>
              </div>
            </div>
          </div>
          <!--/ cartFooter -->

        </div>
      </div>
      <!--/row end-->

    </div>
    <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
      <div class="contentBox">
        <div class="w100 costDetails">
          {{#if cartData.length}}
          <div class="table-block" id="order-detail-content"><a class="btn btn-primary btn-lg btn-block "
              title="checkout" href="/checkout" style="margin-bottom:20px"> Proceed to
              checkout &nbsp; <i class="fa fa-arrow-right"></i> </a>
            {{/if}}
            <div class="w100 cartMiniTable">
              <table id="cart-summary" class="std table">
                <tbody>
                  <tr>
                    <td>Total Price</td>
                    <td id="totalPrice" class="price">₹{{grandTotal}}</td>
                  </tr>
                  <tr style="">
                    <td>Shipping</td>
                    <td class="price"><span class="success">Free shipping!</span></td>
                  </tr>
                  <tr>
                    <td>Grand Total</td>
                    <td class="site-color" id="total-price">₹<span id="grandTotal">{{grandTotal}}</span></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- End popular -->

    </div>
    <!--/rightSidebar-->

  </div>
  <!--/row-->

  <div style="clear:both"></div>
</div>
