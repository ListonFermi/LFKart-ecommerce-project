{{> userHeader}}

  <div class="container main-container headerOffset">

    <div class="row">
      <div class="breadcrumbDiv col-lg-12">
        <ul class="breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li class="active"> Authentication</li>
        </ul>
      </div>
    </div>

    <div class="row">

      <div class="col-lg-9 col-md-9 col-sm-7">
        <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Authentication</span></h1>

        <div class="row userInfo">

          <div class="col-xs-12 col-sm-6">
            <h2 class="block-title-2"> Create an account </h2>
            <form action="/otp" method="POST" role="form" class="regForm">
              <div class="form-group">
                <label>Username</label>
                <input name="username" title="Please enter your username (at least 3 characters)" type="text"
                  class="form-control" placeholder="Enter name" required minlength="3">
              </div>
              <div class="form-group">
                <label>Email address</label>
                <input name="email" title=" Please enter valid email" type="email" class="form-control"
                  placeholder="Enter email" required>
              </div>
              <div class="form-group">
                <label>Phone Number</label>
                <input name="phonenumber" minlength="10" maxlength="10" title=" Enter 10 numbers" type="tel"
                  class="form-control" placeholder="Enter phone number" required>
              </div>
              <div class="form-group">
                <label>Password</label>
                <input name="password" required id="password" minlength="5" maxlength="12"
                  title="Please enter your password, between 5 and 12 characters" type="password" class="form-control"
                  placeholder="Password" onkeyup="checkPasswordStrength();">
              </div>
              <label id="password-strength-status"></label>
              <div class="form-group">
                <label>Confirm Password</label>
                <input required minlength="5" title="Passwords doesn't match" id="confirmPass" type="password"
                  class="form-control" placeholder="Confirm Password" data-rule-equalTo="#password">
              </div>
              
              {{#if emailPhoneExists}}
              <div class="form-group">
                <label style="color: red;">Email/Phone Number already exists!</label>
              </div>
              {{/if}}


              <button type="submit" class="btn btn-primary"><i class="fa fa-user"></i> Create an account </button>


            </form>
          </div>
          <div class="col-xs-12 col-sm-6">
            <h2 class="block-title-2"><span>Already registered?</span></h2>

            {{#if passwordResetSucess}}
            <div class="form-group">
              <label style="color: rgb(64, 255, 0);">Password changed successfully, Login now!</label>
            </div>
            {{/if}}

            <form action="/login" method="POST" class="logForm">
              <div class="form-group">
                <label>Email address</label>
                <input name="email" type="email" class="form-control" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input name="password" type="password" class="form-control" placeholder="Password">
              </div>
              <div class="form-group">
                <p><a title="Recover your forgotten password" href="/forgotPasswordPage">Forgot your
                    password? </a></p>
              </div>
              {{#if invalidCredentials}}
              <div class="form-group">
                <label style="color: red;">Enter valid credentials</label>
              </div>
              {{/if}}
              <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Sign In</button>
            </form>
          </div>
        </div>
        <!--/row end-->

      </div>

      <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
  </div>
  <!-- /wrapper -->

  <div class="gap"></div>


